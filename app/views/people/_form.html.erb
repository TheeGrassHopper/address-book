<%= form_with(model: person, class: 'form-horizontal') do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :salutation, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.select :salutation, options_for_select(['Mr.', 'Mrs.', 'Ms.']), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :first_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :middle_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :middle_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :ssn, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :ssn, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :birth_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.date_select :birth_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :comment, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_area :comment, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

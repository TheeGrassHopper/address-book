<div class="container">
  <div class="card my-5">
    <h1 class="card-header">Signup</h1>
    <div class="card-body">
      <%= form_with model: @user, url: users_path do |form| %>
        <% if @user.errors.any? %>
          <div class="error-messages">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :email, class: 'form-control-label' %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :role, class: 'form-control-label' %>
          <%= form.select :role, options_for_select(['Admin', 'Guest']), {}, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password, class: 'form-control-label' %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation, class: 'form-control-label' %>
          <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= form.submit 'Create account', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
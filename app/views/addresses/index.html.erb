<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Town</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.person.first_name + " " + address.person.last_name %></td>
        <td><%= link_to 'Show', person_address_path(address.person.id, address.id) %></td>
        <td><%= link_to 'Edit', edit_person_address_path(address.person.id, address.id) %></td>
        <td><%= link_to 'Destroy', person_address_path(address.person.id, address.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', person_addresses_path(params[:person_id]) %>
